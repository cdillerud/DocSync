# ============================================
# GPI Document Hub - Environment Configuration
# ============================================

# MongoDB
MONGO_URL=mongodb://localhost:27017
DB_NAME=gpi_document_hub

# CORS
CORS_ORIGINS=*

# ---- Entra ID / Azure AD ----
TENANT_ID=<your-azure-tenant-id>

# ---- Business Central ----
BC_ENVIRONMENT=Sandbox
BC_COMPANY_NAME=CRONUS USA, Inc.
BC_CLIENT_ID=<entra-app-client-id-for-bc>
BC_CLIENT_SECRET=<entra-app-client-secret-for-bc>

# ---- Microsoft Graph (SharePoint) ----
GRAPH_CLIENT_ID=<entra-app-client-id-for-graph>
GRAPH_CLIENT_SECRET=<entra-app-client-secret-for-graph>
SHAREPOINT_SITE_HOSTNAME=yourcompany.sharepoint.com
SHAREPOINT_SITE_PATH=/sites/GPI-DocumentHub-Test
SHAREPOINT_LIBRARY_NAME=Documents

# ---- Hub Config ----
HUB_BASE_URL=http://localhost:8001
JWT_SECRET=change-this-to-a-secure-random-string
DEMO_MODE=true

