# GPI Document Hub - Environment Configuration
# Copy this to .env and fill in your values

# MongoDB (Docker Compose handles this, but keep for reference)
MONGO_URL=mongodb://mongodb:27017
DB_NAME=gpi_document_hub

# CORS
CORS_ORIGINS=*

# Microsoft Entra ID / Azure AD
TENANT_ID=your-tenant-id

# Business Central
BC_ENVIRONMENT=Sandbox
BC_COMPANY_NAME=Your Company Name
BC_CLIENT_ID=your-bc-client-id
BC_CLIENT_SECRET=your-bc-client-secret

# Microsoft Graph API (SharePoint + Email)
GRAPH_CLIENT_ID=your-graph-client-id
GRAPH_CLIENT_SECRET=your-graph-client-secret

# SharePoint
SHAREPOINT_SITE_HOSTNAME=yourcompany.sharepoint.com
SHAREPOINT_SITE_PATH=/sites/YourSite
SHAREPOINT_LIBRARY_NAME=Documents

# Security
JWT_SECRET=generate-a-strong-random-secret-here

# Feature Flags
DEMO_MODE=false
ENABLE_CREATE_DRAFT_HEADER=false

# Email Polling (Phase C1 - Passive Tap)
EMAIL_POLLING_ENABLED=false
EMAIL_POLLING_INTERVAL_MINUTES=5
EMAIL_POLLING_USER=ap@yourcompany.com
EMAIL_POLLING_LOOKBACK_MINUTES=60
EMAIL_POLLING_MAX_MESSAGES=25
EMAIL_POLLING_MAX_ATTACHMENT_MB=25

# AI Classification (Emergent LLM Key)
EMERGENT_LLM_KEY=your-emergent-llm-key
